<div class="wrapper" id="wrapper">
    <!-- Start Bradcaump area -->
    <div class="ht__bradcaump__area bg-image--3">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="bradcaump__inner text-center">
                        <h2 class="bradcaump-title">Update Comic</h2>
                        <nav class="bradcaump-content">
                            <a class="breadcrumb_item" href="/">Admin</a>
                            <span class="brd-separetor">/</span>
                            <span class="breadcrumb_item active">add chapter</span>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Bradcaump area -->
    <!-- Modal -->
    <div class="modal-dialog modal__container" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="modal-product">
                    <!-- Start product /images -->
                    <div class="product-images">
                        <div class="main-image images">
                            <img alt="big images" src="{{comic.posterPath}}">
                        </div>
                    </div>
                    <!-- end product /images -->
                    <div class="product-info">
                        <h1>{{comic.name}}<a href="/admin/{{comic.id}}/edit_comic"> &#128393;</a> </h1>
                        <div class="rating__and__review">
                            <ul class="rating">
                                <li><span class="ti-star"></span></li>
                                <li><span class="ti-star"></span></li>
                                <li><span class="ti-star"></span></li>
                                <li><span class="ti-star"></span></li>
                                <li><span class="ti-star"></span></li>
                            </ul>
                            <div class="review">
                                <a>{{comic.totalChap}} chapter</a>
                            </div>
                        </div>
                        <div class="price-box-3">
                            <div class="s-price-box">
                                <span class="new-price">{{comic.numberView}} views</span>
                            </div>
                        </div>
                        <div class="quick-desc">
                            {{comic.descriptionShort}}
                        </div>
                        <div class="select__color">
                            <h2>{{comic.author}}</h2>
                        </div>
                        <div class="select__size">
                            <h2>{{comic.timeFomart}}</h2>
                        </div>
                        <div class="social-sharing">
                            <div class="widget widget_socialsharing_widget">
                                <h3 class="widget-title-modal">Share this comic</h3>
                                <ul class="social__net social__net--2 d-flex justify-content-start">
                                    <li class="facebook"><a href="#" class="rss social-icon"><i
                                                class="zmdi zmdi-rss"></i></a></li>
                                    <li class="linkedin"><a href="#" class="linkedin social-icon"><i
                                                class="zmdi zmdi-linkedin"></i></a></li>
                                    <li class="pinterest"><a href="#" class="pinterest social-icon"><i
                                                class="zmdi zmdi-pinterest"></i></a></li>
                                    <li class="tumblr"><a href="#" class="tumblr social-icon"><i
                                                class="zmdi zmdi-tumblr"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="quick-desc">
                            <form action="/admin/{{comic.id}}/add_chapter" method="POST">
                                <div class="input_box">
                                    <input type="file" name="addChapter">
                                </div>
                                <div class="product__info__main">
                                    <input id="chapIndex" class="input-text" name="chapIndex" min="1" value="1" title="ChapIndex"
											type="number">
                                    <div class="box-tocart d-flex">
                                        <div class="addtocart__actions">
                                            <button class="tocart" type="submit" title="Add to Cart">︵Add new chapter︵</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>